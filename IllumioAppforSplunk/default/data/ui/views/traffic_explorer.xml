<form version="1.1" script="resubmit_click_handler.js">
  <label>Traffic Explorer</label>
  <search id="traffic_base_search">
    <query>
        | tstats sum(Traffic.count) AS flows, values(Traffic.src_host) AS src_host, values(Traffic.dest_host) AS dest_host, values(Traffic.direction) AS direction, values(Traffic.transport) AS transport, values(Traffic.src_label_pairs) AS src_labels, values(Traffic.dest_label_pairs) AS dest_labels FROM datamodel=Illumio.Traffic WHERE Traffic.pce_fqdn=$pce_tok|s$ (Traffic.src_ip=$host_ip|s$ OR Traffic.src_host=$host_ip|s$ OR Traffic.dest_ip=$host_ip|s$ OR Traffic.dest_host=$host_ip|s$) ($src_label_filter$ OR $dest_label_filter$) Traffic.transport=$protocol_tok|s$ Traffic.dest_port IN $port_filter$ Traffic.action IN $action_filter$ BY _time Traffic.pce_fqdn Traffic.src_ip Traffic.dest_ip Traffic.dest_port Traffic.action
    </query>
    <earliest>$time_range.earliest$</earliest>
    <latest>$time_range.latest$</latest>
  </search>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="time_range">
      <label>Time Range</label>
      <default>
        <earliest>-60m@m</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="pce_tok">
      <label>PCE</label>
      <search>
        <query>| tstats count FROM datamodel=Illumio.Traffic BY Traffic.pce_fqdn</query>
        <earliest>$time_range.earliest$</earliest>
        <latest>$time_range.latest$</latest>
      </search>
      <selectFirstChoice>true</selectFirstChoice>
      <fieldForLabel>Traffic.pce_fqdn</fieldForLabel>
      <fieldForValue>Traffic.pce_fqdn</fieldForValue>
      <change>
        <set token="form.action_filter">*</set>
        <set token="form.port_filter">*</set>
        <set token="form.protocol_tok">*</set>
      </change>
    </input>
    <input type="text" token="host_ip">
      <label>Hostname/IP</label>
      <default>*</default>
      <change>
        <set token="form.action_filter">*</set>
        <set token="form.port_filter">*</set>
        <set token="form.protocol_tok">*</set>
      </change>
    </input>
    <input type="multiselect" token="src_label_filter">
      <label>Labels</label>
      <search>
        <query>
          | tstats values(Traffic.src_label_pairs) AS src_label_pairs, values(Traffic.dest_label_pairs) AS dest_label_pairs FROM datamodel=Illumio.Traffic WHERE Traffic.pce_fqdn=$pce_tok|s$ (Traffic.src_ip=$host_ip|s$ OR Traffic.src_host=$host_ip|s$ OR Traffic.dest_ip=$host_ip|s$ OR Traffic.dest_host=$host_ip|s$)
          | eval label_pairs = mvdedup(mvappend(src_label_pairs, dest_label_pairs))
          | mvexpand label_pairs
          | where label_pairs != "" AND isnotnull(label_pairs)
          | fields label_pairs
        </query>
        <earliest>$time_range.earliest$</earliest>
        <latest>$time_range.latest$</latest>
      </search>
      <fieldForLabel>label_pairs</fieldForLabel>
      <fieldForValue>label_pairs</fieldForValue>
      <choice value="*">All</choice>
      <default>*</default>
      <valuePrefix>Traffic.src_label_pairs="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> AND </delimiter>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <change>
        <set token="form.action_filter">*</set>
        <set token="form.port_filter">*</set>
        <set token="form.protocol_tok">*</set>
        <set token="form.dest_label_filter">$value$</set>
      </change>
    </input>
    <input type="multiselect" token="dest_label_filter" depends="$hidden$">
      <choice value="*">All</choice>
      <default>*</default>
      <valuePrefix>Traffic.dest_label_pairs="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> AND </delimiter>
      <prefix>(</prefix>
      <suffix>)</suffix>
    </input>
  </fieldset>
  <row>
    <panel>
      <input type="multiselect" token="action_filter">
        <label>Policy Decision</label>
        <search>
          <query>
            | tstats count FROM datamodel=Illumio.Traffic WHERE Traffic.pce_fqdn=$pce_tok|s$ (Traffic.src_ip=$host_ip|s$ OR Traffic.src_host=$host_ip|s$ OR Traffic.dest_ip=$host_ip|s$ OR Traffic.dest_host=$host_ip|s$) ($src_label_filter$ OR $dest_label_filter$) Traffic.transport=$protocol_tok|s$ Traffic.dest_port IN $port_filter$ BY Traffic.action
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <prefix>(</prefix>
        <suffix>)</suffix>
        <valuePrefix>"</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <delimiter>, </delimiter>
        <fieldForLabel>Traffic.action</fieldForLabel>
        <fieldForValue>Traffic.action</fieldForValue>
      </input>
      <input type="multiselect" token="port_filter">
        <label>Port</label>
        <search>
          <query>
            | tstats count FROM datamodel=Illumio.Traffic WHERE Traffic.pce_fqdn=$pce_tok|s$ (Traffic.src_ip=$host_ip|s$ OR Traffic.src_host=$host_ip|s$ OR Traffic.dest_ip=$host_ip|s$ OR Traffic.dest_host=$host_ip|s$) ($src_label_filter$ OR $dest_label_filter$) Traffic.transport=$protocol_tok|s$ Traffic.action IN $action_filter$ BY Traffic.dest_port
            | sort +Traffic.dest_port
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <prefix>(</prefix>
        <suffix>)</suffix>
        <valuePrefix>"</valuePrefix>
        <valueSuffix>"</valueSuffix>
        <delimiter>, </delimiter>
        <fieldForLabel>Traffic.dest_port</fieldForLabel>
        <fieldForValue>Traffic.dest_port</fieldForValue>
      </input>
      <input type="dropdown" token="protocol_tok">
        <label>Protocol</label>
        <search>
          <query>
            | tstats count FROM datamodel=Illumio.Traffic WHERE Traffic.pce_fqdn=$pce_tok|s$ (Traffic.src_ip=$host_ip|s$ OR Traffic.src_host=$host_ip|s$ OR Traffic.dest_ip=$host_ip|s$ OR Traffic.dest_host=$host_ip|s$) ($src_label_filter$ OR $dest_label_filter$) Traffic.dest_port IN $port_filter$ Traffic.action IN $action_filter$ BY Traffic.transport
          </query>
          <earliest>$time_range.earliest$</earliest>
          <latest>$time_range.latest$</latest>
        </search>
        <choice value="*">All</choice>
        <default>*</default>
        <fieldForLabel>Traffic.transport</fieldForLabel>
        <fieldForValue>Traffic.transport</fieldForValue>
      </input>
      <html>
      <div style="font-size:13px; font-style:italic">Please specify either hostname(s) or scope labels. If both hostname and scope labels are specified, then the filter uses AND condition.</div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <title>Flows by Policy Decision</title>
      <chart id="resubmit_on_click_0">
        <search base="traffic_base_search">
          <query>
            | stats sum(flows) AS Flows BY Traffic.action
            | rename Traffic.action AS "Policy Decision"
          </query>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <option name="charting.fieldColors">{"allowed":#53A051,"potentially-blocked":#F8BE34,"blocked":#DC4E41,"unknown":#808080}</option>
        <drilldown>
          <set token="form.action_filter">$click.value$</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Flows by Port</title>
      <table id="resubmit_on_click_1">
        <search base="traffic_base_search">
          <query>
            | stats sum(flows) AS Flows BY Traffic.dest_port
            | rename Traffic.dest_port AS Port
            | sort -Flows
          </query>
        </search>
        <option name="count">5</option>
        <option name="drilldown">row</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="wrap">false</option>
        <format type="color" field="Flows">
          <colorPalette type="minMidMax" maxColor="#006D9C" minColor="#FFFFFF"></colorPalette>
          <scale type="minMidMax"></scale>
        </format>
        <drilldown>
          <set token="form.port_filter">$click.value$</set>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <div style="font-size:13px; font-style:italic">Please be aware that you will need to install the <a href="https://splunkbase.splunk.com/app/3112/" target="_blank">Sankey Diagram App</a> in order to see the following panel.</div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <title>Communications Map between Labeled Workloads</title>
      <input type="dropdown" token="nflows" searchWhenChanged="true">
        <label>Number of links to chart</label>
        <default>100000000</default>
        <initialValue>100000000</initialValue>
        <choice value="10">10</choice>
        <choice value="20">20</choice>
        <choice value="30">30</choice>
        <choice value="50">50</choice>
        <choice value="100000000">All</choice>
      </input>
      <viz type="sankey_diagram_app.sankey_diagram">
        <search base="traffic_base_search">
          <query>
            | eval Source = if(isnotnull(src_host), src_host, 'Traffic.src_ip')
            | eval Destination = if(isnotnull(dest_host), dest_host, 'Traffic.dest_ip')
            | rename Traffic.dest_port as Port
            | stats sum(flows) AS Flows BY Source Destination Port
            | table Source Destination Flows Port
            | sort -Flows
            | head $nflows$
          </query>
        </search>
        <option name="drilldown">all</option>
        <option name="refresh.display">progressbar</option>
        <option name="sankey_diagram_app.sankey_diagram.colorMode">categorical</option>
        <option name="sankey_diagram_app.sankey_diagram.maxColor">#ff99cc</option>
        <option name="sankey_diagram_app.sankey_diagram.minColor">#33ccff</option>
        <option name="sankey_diagram_app.sankey_diagram.numOfBins">3</option>
        <option name="sankey_diagram_app.sankey_diagram.showBackwards">true</option>
        <option name="sankey_diagram_app.sankey_diagram.showLabels">true</option>
        <option name="sankey_diagram_app.sankey_diagram.showLegend">true</option>
        <option name="sankey_diagram_app.sankey_diagram.showSelf">true</option>
        <option name="sankey_diagram_app.sankey_diagram.showTooltip">true</option>
        <option name="sankey_diagram_app.sankey_diagram.styleBackwards">false</option>
        <option name="sankey_diagram_app.sankey_diagram.useColors">true</option>
        <drilldown>
          <link target="_blank">search?q=%60illumio_get_index%60%20sourcetype%3D%22illumio%3Apce%3Acollector%22%20$pce_filter$%20$protocol_filter$%20$action_filter$%20(src_ip%3D%22$row.Source$%22%20OR%20src_host%3D%22$row.Source$%22)%20(dest_ip%3D%22$row.Destination$%22%20OR%20dest_host%3D%22$row.Destination$%22)%0A%20%20%20%20%20%20%20%20%20%20%20%20%7C%20where%20match(mvjoin(src_label_pairs%2C%20%22%2C%22)%2C%20$label_rex$)%20OR%20match(mvjoin(dest_label_pairs%2C%20%22%2C%22)%2C%20$label_rex$)&amp;earliest=$time_range.earliest$&amp;latest=$time_range.latest$</link>
        </drilldown>
      </viz>
    </panel>
  </row>
  <row>
    <panel>
      <title>Traffic Events</title>
      <table>
        <search base="traffic_base_search">
          <query>
            | eval Source = if(isnotnull(src_host), src_host, 'Traffic.src_ip')
            | eval Destination = if(isnotnull(dest_host), dest_host, 'Traffic.dest_ip')
            | table _time, Traffic.pce_fqdn, Source, direction, Destination, Traffic.dest_port, transport, flows, Traffic.action, src_labels, dest_labels
            | rename _time AS Timestamp, Traffic.pce_fqdn AS "PCE", direction AS Direction, Traffic.dest_port AS "Port", transport AS Protocol, flows AS Flows, Traffic.action AS "Policy Decision", src_labels AS "Source Labels", dest_labels AS "Destination Labels"
            | fillnull value="-" "Source Labels" "Destination Labels"
            | fieldformat Timestamp = strftime(Timestamp, "%+")
            | sort -Timestamp
          </query>
        </search>
        <option name="count">10</option>
        <option name="drilldown">row</option>
        <option name="wrap">true</option>
        <format type="color" field="Policy Decision">
          <colorPalette type="map">{"allowed":#53A051,"potentially-blocked":#F8BE34,"blocked":#DC4E41,"unknown":#808080}</colorPalette>
        </format>
        <drilldown>
          <link target="_blank">search?q=%60illumio_get_index%60%20sourcetype%3D%22illumio%3Apce%3Acollector%22%20(src_host%3D$row.Source|s$%20OR%20src_ip%3D$row.Source|s$)%20(dest_ip%3D$row.Destination|s$%20OR%20dest_host%3D$row.Destination|s$)%20dest_port%3D$row.Port|s$%20transport%3D$row.Protocol|s$&amp;earliest=$time_range.earliest$&amp;latest=$time_range.latest$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>